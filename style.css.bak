/* Animations */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Responsive */
@media (max-width: 768px) {
  html {
    font-size: 55%;
  }
  
  .navbar-link {
    margin: 0 1.5rem;
  }
  
  .contact-form-container {
    margin: 3rem 2rem;
    padding: 2rem;
  }
  
  .services-grid {
    grid-template-columns: 1fr;
  }
  
  .services-heading {
    font-size: 3rem;
  }
  
  .service-card {
    padding: 2rem;
  }
  
  .service-card i {
    font-size: 3rem;
  }
  
  .service-card h3 {
    font-size: 2rem;
  }
  
  .consultation-btn {
    padding: 1.2rem 2.5rem;
    font-size: 1.6rem;
  }
}

@media (max-width: 480px) {
  html {
    font-size: 50%;
  }
  
  .navbar-link {
    margin: 0 1rem;
    font-size: 1.4rem;
  }
}
