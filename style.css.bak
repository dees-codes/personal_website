:root {
  --primary-dark: #2D1B69;
  --primary: #47208F;
  --primary-light: #8A6FE8;
  --accent: #ffffff;
  --text-primary: #ffffff;
  --text-secondary: #E2E8F0;
  --bg-gradient: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary) 100%);
}

/* Reset and Common Styles */
* {
  margin: 0;
  padding: 0;
  outline: none;
  box-sizing: border-box;
  text-decoration: none;
  list-style-type: none;
  font-family: "Jost", sans-serif;
  font-weight: 400;
}

html {
  font-size: 62.5%;
  scroll-behavior: smooth;
}

body {
  background: var(--primary-dark);
  color: var(--text-primary);
  position: relative;
  overflow-x: hidden;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Section 1 */
.section-1 {
  width: 100%;
  height: 100vh;
  background: var(--bg-gradient);
  flex-direction: column;
  position: relative;
}

.section-1-heading {
  font-size: 4rem;
  font-weight: 700;
  color: var(--accent);
  margin-bottom: 2rem;
  text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
  animation: fadeInDown 1s ease;
}

.person-img {
  width: 25rem;
  height: 25rem;
  object-fit: cover;
  border-radius: 50%;
  border: 0.3rem solid var(--accent);
  background-color: rgba(255, 255, 255, 0.1);
  padding: 0.5rem;
  margin: 4rem 0;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  animation: fadeIn 1s ease;
}

.person-img:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 30px rgba(255, 255, 255, 0.2);
}

.person-name {
  font-size: 2.5rem;
  color: #8892b0;
  animation: fadeInUp 1s ease;
}

/* Navbar */
.navbar {
  width: 100%;
  height: 6rem;
  background-color: rgba(45, 27, 105, 0.95);
  backdrop-filter: blur(10px);
  box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  z-index: 300;
}

.navbar-link {
  font-size: 1.6rem;
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.navbar-link:hover {
  color: var(--accent);
}

/* Services Section */
.services-section {
  background: var(--primary);
  padding: 8rem 0;
}

.services-heading {
  color: var(--accent);
  text-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 4rem;
  max-width: 120rem;
  margin: 0 auto;
  padding: 0 2rem;
}

.service-card {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.service-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  border-color: var(--accent);
}

.service-card i {
  color: var(--accent);
}

.service-card h3 {
  color: var(--accent);
}

.service-card p {
  color: var(--text-secondary);
}

/* Contact Form */
.contact-form-container {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  width: 100%;
  max-width: 60rem;
  margin: 5rem auto;
  padding: 3rem;
  border-radius: 10px;
  box-shadow: 0 20px 40px -10px rgba(2, 12, 27, 0.7);
  animation: fadeIn 1s ease;
}

.form-heading {
  color: var(--accent);
  font-size: 2.5rem;
  text-align: center;
  margin-bottom: 3rem;
}

.form-group {
  margin-bottom: 2rem;
}

.form-group label {
  color: var(--text-secondary);
  display: block;
  font-size: 1.6rem;
  margin-bottom: 0.8rem;
}

.form-group input,
.form-group textarea {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: var(--text-primary);
  font-size: 1.6rem;
  padding: 1rem;
  width: 100%;
  transition: all 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus {
  border-color: var(--accent);
  box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
}

.submit-btn,
.consultation-btn {
  border: 2px solid var(--accent);
  color: var(--accent);
  cursor: pointer;
  font-size: 1.6rem;
  padding: 1.2rem;
  transition: all 0.3s ease;
}

.submit-btn:hover,
.consultation-btn:hover {
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-3px);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
}

/* Copyright text */
.copyright {
  color: var(--text-secondary);
  font-size: 1.8rem;
  letter-spacing: 0.1rem;
  font-weight: 300;
  text-align: center;
  line-height: 1.5;
}

